            <label asp-for="ImageUrl"></label>
            <input asp-for="ImageUrl" class="form-control" placeholder="Your
            fine Link here...">

            <span asp-validation-for="ImageUrl" class="small textdanger"></span>
            </div>*@
            @*<div class="form-group" enctype="multipart/form-data">
            <label asp-for="Images"></label>
            <input asp-for="Images" type="file" name="files" multiple />
            <span asp-validation-for="Images"></span>
            </div>*@

            <div class="form-group">
                <label asp-for="Images"></label>
                <input asp-for="Images" type="file" multiple />
                <span asp-validation-for="Images"></span>
            </div>


            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control">
                <span asp-validation-for="Price" class="small textdanger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City"></label>
                <input asp-for="City" class="form-control">
                <span asp-validation-for="City" class="small textdanger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId"></label>
                <select asp-for="CategoryId" class="form-control">
                    @foreach (var category in Model.ProductProjectCategories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
                <span asp-validation-for="CategoryId" class="small textdanger"></span>
            </div>
            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>