@using Microsoft.AspNetCore.Identity
@using Blasco.Data.Models
@using Blasco.Services.Data.Interfaces;
@using Blasco.Web.Infrastructure.Extentions;

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@inject ICreatorService creatorService
@inject IUserService userService

@{
    string greetingName = "";
    if (this.User.IsCustomer() || this.User.IsAdmin())
    {
        greetingName = await this.userService.GetFullNameByIdAsync(this.User.GetId()!);
    }
    else
    {
        greetingName = await this.creatorService.GetCreatorPseudonymByIdAsync(this.User.GetId()!);
    }
}

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        @if (this.User.Identity?.IsAuthenticated ?? false)
        {
            <li class="nav-item">
                <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello, @greetingName</a>
            </li>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDarkDropdown" aria-controls="navbarNavDarkDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDarkDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <button class="btn btn-dark dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                            My Profile
                        </button>
                        <ul class="dropdown-menu dropdown-menu-dark">
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Product" asp-action="Mine">My Product</a>
                            </li>
                            @if (this.User.IsCreator() || this.User.IsAdmin())
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Project" asp-action="Mine">My Projects</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Project" asp-action="Add">Add Project</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Product" asp-action="Add">Add Product</a>
                                </li>
                            }
                            @if (this.User.IsCustomer() || this.User.IsAdmin())
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Challenge" asp-action="Add">Add Challenge</a>
                                </li>
                            }
                           
                            <li><hr class="dropdown-divider"></li>
                            <li class="nav-item">
                                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                    <button type="submit" class="nav-link btn btn-link text-white">Logout</button>
                                </form>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        }
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="" asp-controller="Creator" asp-action="RegisterStepOne">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="" asp-controller="Creator" asp-action="Login">Login</a>
        </li>
    }
</ul>
