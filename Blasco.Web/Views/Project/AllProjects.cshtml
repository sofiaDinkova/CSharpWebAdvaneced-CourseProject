@model AllProjectsQueryModel
@{
    ViewBag.Title = "All Projects";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="container-fluid">
    <div class="row">
        <div class="col-md-2">
            <div class="list-group">
                <a href="#" class="list-group-item disabled">Categories</a>
                <a href="@Url.Action("AllProjects", new { category = "" })"
                   class="list-group-item @(string.IsNullOrEmpty(Model.Category) ? "active" : string.Empty)">
                    All
                </a>
                @foreach (var category in Model.Categories)
                {
                    <a href="@Url.Action("AllProjects", new { category = category })"
                       class="list-group-item @(Model.Category == category ? "active" : string.Empty)">
                        @category
                    </a>
                }
            </div>
        </div>
        <div class="col-md-8">
            <form method="get" asp-controller="Project" asp-action="AllProjects">
                <div class="row">

                    <div class="form-group col-md-3 d-flex justify-content-between">
                        <div class="form-group mb-3">
                            <label asp-for="PrjectsPerPage"></label>
                            <select asp-for="PrjectsPerPage" class="form-control">
                                <option value="3">3</option>
                                <option value="6">6</option>
                                <option value="9">9</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group col-md-3 d-flex justify-content-between">
                        <div class="form-group mb-3">
                            <label asp-for="SearchString"></label>
                            <input asp-for="SearchString" class="form-control" placeholder="...">
                        </div>
                    </div>
                    <div class="form-group col-md-3 d-flex justify-content-between">
                        <div class="form-group mb-3">
                            <label asp-for="ProjectSorting"></label>
                            <select asp-for="ProjectSorting" class="form-control">
                                <option value="0">Newest</option>
                                <option value="1">Oldest</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group col-md-3 d-flex justify-content-between">
                        <div class="form-group mb-3">
                            <input type="submit" value="Search" class="btn btn-primary" />
                        </div>
                    </div>
                </div>

            </form>
            @{
                int previousPage = Model.CurrentPage - 1;
                if (previousPage < 1)
                {
                    previousPage = 1;
                }
                int maxPage = (int)Math.Ceiling((double)Model.TotalProjects /
                Model.PrjectsPerPage);
            }
            <div class="row mb-5">
                <div class="col-md-6 d-grid gap-2 d-md-flex justify-content-md-start">
                    <a class="btn btn-primary @(Model.CurrentPage == 1 ? "disabled" : string.Empty)"
                       asp-controller="Project"
                       asp-action="AllProjects"
                       asp-route-currentPage="@previousPage"
                       asp-route-category="@Model.Category"
                       asp-route-searchTerm="@Model.SearchString"
                       asp-route-sorting="@((int)Model.ProjectSorting)"><<</a>
                </div>
                @{
                    bool shouldButtonBeDisabled = Model.CurrentPage == maxPage ||
                    !Model.Projects.Any();
                }
                <div class="col-md-6 d-grid gap-2 d-md-flex justify-content-md-end">
                    <a class="btn btn-primary
                        @(shouldButtonBeDisabled ? "disabled" : string.Empty)"
                       asp-controller="Product"
                       asp-action="AllProducts"
                       asp-route-currentPage="@(Model.CurrentPage + 1)"
                       asp-route-category="@Model.Category"
                       asp-route-searchTerm="@Model.SearchString"
                       asp-route-sorting="@((int)Model.ProjectSorting)">>></a>
                </div>
            </div>
            @if (!Model.Projects.Any())
            {
                <h2 class="text-center">No projects found by the given criteria!</h2>
            }
            <div class="row">
                @foreach (var product in Model.Projects)
                {
                    <partial name="_ProjectPartial" model="@product" />
                }
            </div>
        </div>
    </div>
</div>
