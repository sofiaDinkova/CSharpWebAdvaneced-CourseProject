@model ChallengeFormModel
@{
    ViewData["Title"] = "Add Challenge";
}

<h2 class="text-center"> @ViewData["Title"]</h2>
<hr />
<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post" enctype="multipart/form-data">

            <div class="form-group p-2">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" placeholder="Title...">
                <span asp-validation-for="Title" class="small text-danger"></span>
            </div>
            <div class="form-group p-2">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" rows="4" class="form-control"
                          placeholder="..."></textarea>
                <span asp-validation-for="Description" class="small textdanger"></span>
            </div>

            <div class="form-group p-2">
                <label asp-for="PriceToWin"></label>
                <input asp-for="PriceToWin" class="form-control">
                <span asp-validation-for="PriceToWin" class="small textdanger"></span>
            </div>
            <div class="form-group p-2">
                <label asp-for="CategoryId"></label>
                <select asp-for="CategoryId" class="form-control">
                    @foreach (var category in Model.ProductProjectCategories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
                <span asp-validation-for="CategoryId" class="small textdanger"></span>
            </div>
            <div class="form-group p-2">
                <label asp-for="Image" class="form-label">Your Image</label>
                <input class="form-control" asp-for="Image" type="file" id="formFile"/>
                <span asp-validation-for="Image"></span>
            </div>
            <div class="text-center">
                <input class="btn btn-outline-dark" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>

@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}