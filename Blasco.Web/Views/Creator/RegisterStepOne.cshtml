@model RegisterStepOneFormModel
@{
    ViewData["Title"] = "RegisterStepOne";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form id="preRegisterForm" method="post">
            <h2>Are you a customer or a creator.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3">
                <input asp-for="Role" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Role"></label>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            
            <button id="RegisterStepOne" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}