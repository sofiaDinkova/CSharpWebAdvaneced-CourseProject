@{
    ViewData["Title"] = "Home Page";
}
<div class="mt-4 p-5 bg-light text-center">
    <h2 class="display-4">Hello, Admin!</h2>
    <p class="lead mb-1 mt-3">
        This is your administrator area - you can <b>read</b>, <b>create</b>,
        <b>delete</b> and <b>edit</b> projects, products and challenges.
    </p>
    <p class="lead mt-1">
        You can also see <b>all users</b> in the
        system.
    </p>
    <hr class="my-4">
    <a asp-area="" asp-controller="Product" asp-action="AllProducts"
       class="btn btn-primary btn-lg">Products</a>
    <span> | </span>
    <a asp-area="" asp-controller="Project" asp-action="AllProjects"
       class="btn btn-primary btn-lg">Projects</a>
    <span> | </span>
    <a asp-area="" asp-controller="Challenge" asp-action="AllChallenges"
       class="btn btn-primary btn-lg">Challenges</a>
    <span> | </span>
    <a asp-area="Admin" asp-controller="User" asp-action="All"
       class="btn btn-primary btn-lg">Users</a>
    <span> | </span>
</div>
    